## Public (safe to expose to the browser)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Required for thirdweb auth payloads (no protocol).
# Local: localhost:3000
# Vercel: your-project.vercel.app (or your custom domain)
NEXT_PUBLIC_THIRDWEB_AUTH_DOMAIN=localhost:3000

# DotPay backend base URL (identity, DotPay IDs, notifications).
NEXT_PUBLIC_DOTPAY_API_URL=http://localhost:4000

# Optional: force the network the app uses (`sepolia` | `mainnet`).
# If unset: dev -> Sepolia, prod -> Arbitrum One.
NEXT_PUBLIC_DOTPAY_NETWORK=sepolia

## Optional (dev)
# Enable a one-time console warning in dev if the backend is unreachable.
NEXT_PUBLIC_ENABLE_BACKEND_HEALTHCHECK=false

## Server-only (never expose to the browser)
# thirdweb secret key (used server-side to load email/phone after sign-in).
THIRDWEB_SECRET_KEY=

# thirdweb auth admin account private key (used to sign/verify auth payloads).
AUTH_PRIVATE_KEY=

# Needed for on-chain Activity (USDC transfers) via the Etherscan v2 API.
ARBISCAN_API_KEY=

# Shared secret between Next.js and backend (used for internal-only endpoints like notifications).
DOTPAY_INTERNAL_API_KEY=
